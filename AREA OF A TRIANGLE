#include <stdio.h>
#include<math.h>

int main ()
{
  float a, b, c, area;
  float s = 0;
  printf ("\nenter the sides of a triangle");
  scanf ("%f%f%f",&a,&b,&c);
  s = (a + b + c) / 2;
  area = sqrt (s * (s - a) * (s - b) * (s - c));
  printf("area of a triangle is area=%f\n ", area);
  return 0;
 }
